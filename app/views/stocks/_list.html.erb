<table class="table table-striped">
  <thead>
    <tr>
      <th>No.</th>
      <th>Name</th>
      <th>Symbol</th>
      <th>Current Price</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tbody>
    <% stocks_count = 1 %>
    <% @user_stocks.each do |user_stock| %>
    <tr>
      <td><%= stocks_count %></td>
      <td><%= user_stock.name %></td>
      <td><%= user_stock.ticker %></td>
      <td><%= user_stock.price %></td>
      <% if @user.id == current_user.id %>
      <td><%= link_to "Remove",  user_stock_path(user_stock), :method => :delete, :data => {:confirm => "Are you sure you want to remove #{user_stock.ticker} from the watchlist?"}, :class => "btn btn-xs btn-danger" %></td>
      <% end %>
    </tr>
    <% stocks_count+=1 %>
    <% end %>
  </tbody>
</table>